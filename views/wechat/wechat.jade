doctype html
html
  head
    title #{title}
    script(src='http://res.wx.qq.com/open/js/jweixin-1.0.0.js')
    script(src='http://cdn.bootcss.com/jquery/2.1.3/jquery.min.js')
  body
    button.btn share

    script.
      $(function(){
        wx.config();

        wx.ready(function(){
          wx.onMenuShareTimeline({
              title: 'zkk-title', // 分享标题
              link: '', // 分享链接
              imgUrl: '', // 分享图标
              success: function () {
                  // 用户确认分享后执行的回调函数
                  alert("ok");
              },
              cancel: function () {
                  // 用户取消分享后执行的回调函数
                  alert("cancel");
              }
          });
        });

      });
