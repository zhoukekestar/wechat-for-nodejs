doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    base(href='/admin/')
    title 登录页面
    meta(name='msapplication-TileColor', content='#5bc0de')
    meta(name='msapplication-TileImage', content='assets/img/metis-tile.png')
    // Bootstrap
    link(rel='stylesheet', href='assets/lib/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='http://cdn.bootcss.com/font-awesome/4.3.0/css/font-awesome.min.css')
    // Font Awesome
    link(rel='stylesheet', href='assets/lib/font-awesome/css/font-awesome.min.css')
    // Metis core stylesheet
    link(rel='stylesheet', href='assets/css/main.min.css')
    link(rel='stylesheet', href='assets/lib/animate.css/animate.min.css')
  body.login
    .form-signin
      .text-center
        img(src='assets/img/logo.png', alt='Metis Logo')
      hr
      .tab-content
        #login.tab-pane.active
          form(action='index.html')
            p.text-muted.text-center 请输入用户名和密码
            input.form-control.top(type='text', placeholder='用户名')
            input.form-control.bottom(type='password', placeholder='密码')
            .checkbox
              label
                input(type='checkbox')
                | 记住密码
            button.btn.btn-lg.btn-primary.btn-block(type='submit') 登录
        #forgot.tab-pane
          form(action='index.html')
            p.text-muted.text-center 输入验证邮箱
            input.form-control(type='email', placeholder='mail@domain.com')
            br
            button.btn.btn-lg.btn-danger.btn-block(type='submit') 找回密码
        #signup.tab-pane
          form(action='index.html')
            input.form-control.top(type='text', placeholder='用户名')
            input.form-control.middle(type='email', placeholder='邮箱')
            input.form-control.middle(type='password', placeholder='密码')
            input.form-control.bottom(type='password', placeholder='再次输入密码')
            button.btn.btn-lg.btn-success.btn-block(type='submit') 注册
      hr
      .text-center
        ul.list-inline
          li
            a.text-muted(href='#login', data-toggle='tab') 登录
          li
            a.text-muted(href='#forgot', data-toggle='tab') 忘记密码
          li
            a.text-muted(href='#signup', data-toggle='tab') 注册
    script(src='assets/lib/jquery/jquery.min.js')
    script(src='assets/lib/bootstrap/js/bootstrap.min.js')
    script(type='text/javascript').
      (function($) {
        $(document).ready(function() {
          $('.list-inline li > a').click(function() {
            var activeForm = $(this).attr('href') + ' > form';
            //console.log(activeForm);
            $(activeForm).addClass('animated fadeIn');
            //set timer to 1 seconds, after that, unload the animate animation
            setTimeout(function() {
              $(activeForm).removeClass('animated fadeIn');
            }, 1000);
          });
        });
      })(jQuery);
